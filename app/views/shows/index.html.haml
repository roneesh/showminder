%h1 Listing shows

%table
  %thead
    %tr
      %th Name
      %th Theater
      %th Address
      %th Price
      %th Show time
      %th Description
      %th
      %th
      %th
      
  %tbody
    - @shows.each do |show|
      %tr
        %td= show.name
        %td= show.theater
        %td= show.address
        %td= show.price
        %td= show.show_time
        %td= show.description
        %td= link_to 'Show', show
        %td= link_to 'Edit', edit_show_path(show)
        %td= link_to 'Destroy', show, :method => :delete, :data => { :confirm => 'Are you sure?' }

